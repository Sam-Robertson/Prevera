{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "lib": ["ES2020"],
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,

    "rootDir": "src",
    "outDir": "dist",

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "useDefineForClassFields": false
  }
}
